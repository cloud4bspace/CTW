<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".AdditemStepThreeFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foregroundGravity="center_horizontal"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:verticalScrollbarPosition="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Znüni anmelden (Schritt 3/4)"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/secondaryColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Getränkeangebot"
            android:textColor="@color/secondaryDarkColor"
            android:textSize="14sp" />

        <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/glBeverages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:columnCount="4"
            app:rowCount="2">

            <ImageButton
                android:id="@+id/ibWine"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:contentDescription="@string/Wein"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_wine" />

            <ImageButton
                android:id="@+id/ibLimmo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:contentDescription="@string/Limonade"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_food" />

            <ImageButton
                android:id="@+id/ibBeer"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:contentDescription="@string/Bier"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_beers" />

            <ImageButton
                android:id="@+id/ibCocktails"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:contentDescription="@string/Cocktails"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_cocktail" />

            <ImageButton
                android:id="@+id/ibChampagne"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:contentDescription="@string/Champagner"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_champagne" />

            <ImageButton
                android:id="@+id/ibTee"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/Tee"
                android:src="@drawable/icn_bubbletea" />

            <ImageButton
                android:id="@+id/ibCoffee"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/Kaffee"
                android:src="@drawable/icn_coffeecup" />

            <ImageButton
                android:id="@+id/ibWater"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/Wasser"
                android:src="@drawable/icn_mineralwater" />

        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Speisen"
            android:textColor="@color/secondaryDarkColor"
            android:textSize="14sp" />

        <View
            android:id="@+id/divider9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/glFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center_horizontal"
            app:columnCount="4"
            app:rowCount="2">

            <ImageButton
                android:id="@+id/ibCroissant"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:contentDescription="@string/Gipfeli"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_croissant" />

            <ImageButton
                android:id="@+id/ibTarte"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:contentDescription="@string/Kuchen"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_tart" />

            <ImageButton
                android:id="@+id/ibCrisps"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:contentDescription="@string/Chips"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_chips" />

            <ImageButton
                android:id="@+id/ibSandwich"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:contentDescription="@string/Sandwich"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_sandwich" />

            <ImageButton
                android:id="@+id/ibVeggies"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:contentDescription="@string/Gemuese"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_vegetable" />

            <ImageButton
                android:id="@+id/ibSushi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/Sushi"
                android:src="@drawable/icn_sushi" />

            <ImageButton
                android:id="@+id/ibFruits"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/Fruechte"
                android:src="@drawable/icn_fruits" />

            <ImageButton
                android:id="@+id/ibBurger"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/Burger"
                android:src="@drawable/icn_burger" />
        </androidx.gridlayout.widget.GridLayout>

        <LinearLayout
            android:id="@+id/llFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/tvFandB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textColor="@color/secondaryDarkColor"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buAddItemGotoStepFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/rf_icn_next"
            android:text="@string/weiter"
            android:textAllCaps="false" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>